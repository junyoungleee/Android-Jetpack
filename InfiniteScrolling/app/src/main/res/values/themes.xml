<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfiniteScrolling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="content_text1" parent="title_text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="content_text2" parent="title_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="content_text3" parent="title_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="content_error" parent="content_text1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="point_text_box" parent="content_text3">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/text_background_round</item>
    </style>

</resources>